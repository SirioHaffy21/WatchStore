<div class="banner-area section-pt">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6">
                <div class="single-banner mb-30">
                    <a href="#"><img src="~/assets/images/banner/banner-01.jpg" alt=""></a>
