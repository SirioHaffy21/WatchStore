            </div>
        </div>
    </div>
</div>
<div class="letast-blog-area section-pb">
    <div class="container">
        <h3>Post Recent</h3>
        <div class="row">
            @foreach (var item in @ViewBag.RecentPost as List<Post>)
            {
                <div class="col-lg-4">
                    <div class="singel-latest-blog">
                        <div class="articles-image">
                            <a href="/Posts/Details/@item.PostId">
                                <img src="~/imgs/@item.Image1" alt="" height="350">
                            </a>
                        </div>
                        <div class="aritcles-content" style="height:100px">
                            <div class="author-name">
                                post by: <a href="#"> </a>  @item.CreateOn.ToString("dd/MM/yyyy")
                            </div>
                            <h4><a href="/Posts/Details/@item.PostId" class="articles-name">@item.Title </a></h4>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<!-- Messenger Plugin chat Code -->
<div id="fb-root"></div>

<!-- Your Plugin chat code -->
<div id="fb-customer-chat" class="fb-customerchat">
</div>

@section Scripts{

<script>
    var chatbox = document.getElementById('fb-customer-chat');
    chatbox.setAttribute("page_id", "101421329202624");
    chatbox.setAttribute("attribution", "biz_inbox");
    window.fbAsyncInit = function() {
       FB.init({
         xfbml            : true,
         version          : 'v13.0'
       });
     };

     (function(d, s, id) {
       var js, fjs = d.getElementsByTagName(s)[0];
       if (d.getElementById(id)) return;
       js = d.createElement(s); js.id = id;
       js.src = 'https://connect.facebook.net/en_US/sdk/xfbml.customerchat.js';
       fjs.parentNode.insertBefore(js, fjs);
     }(document, 'script', 'facebook-jssdk'));
</script>
}
